// Aim: Generate and plot sinusoidal sequence A⋅cos(2πfn + ϕ) 
clc 
clf 
n = 0:50 
func on x = sinusoidal_sequence(A, f, phi, n) 
x = A * cos(2 * %pi * f * n + phi) 
endfunc on 
x1 = sinusoidal_sequence(1, 0.1, 0, n) 
x2 = sinusoidal_sequence(2, 0.05, %pi/4, n) 
x3 = sinusoidal_sequence(0.5, 0.2, %pi/2, n) 
scf(3) 
subplot(3,1,1) 
plot2d3(n, x1) 
tle("A=1, f=0.1, ϕ=0") 
subplot(3,1,2) 
plot2d3(n, x2) 
tle("A=2, f=0.05, ϕ=π/4") 
subplot(3,1,3) 
plot2d3(n, x3) 
tle("A=0.5, f=0.2, ϕ=π/2") 
