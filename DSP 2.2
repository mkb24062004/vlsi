// Aim: Compute DTFT of x[n] = (0.5)^n * u[n] over [-π, π] 
n = 0:100 // large enough to approximate infinite u[n] 
x = (0.5).^n 
w = linspace(-%pi, %pi, 512) 
X = zeros(1, length(w)) 
for k = 1:length(w) 
  for i = 1:length(n) 
    X(k) = X(k) + x(i) * exp(-%i * w(k) * n(i)) 
  end 
end 
// Plot 
scf(1) 
subplot(2,2,1) 
plot(w, abs(X)) 
title("Magnitude of DTFT") 
subplot(2,2,2) 
plot(w, atan(imag(X),real(X))) 
title("Phase of DTFT") 
subplot(2,2,3) 
plot(w, real(X)) 
title("Real part of DTFT") 
subplot(2,2,4) 
plot(w, imag(X)) 
title("Imaginary part of DTFT")
